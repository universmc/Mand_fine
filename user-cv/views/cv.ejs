<!DOCTYPE html>
<html>
<head>
    <title>CV - <%= candidate.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center"><%= candidate.name %></h1>
        <p class="text-center"><%= candidate.address %> | <%= candidate.phone %> | <%= candidate.email %></p>
        <hr>
        <h2>Summary</h2>
        <p><%= candidate.summary %></p>
        <h2>Experience</h2>
        <% candidate.experience.forEach(function(job) { %>
            <h3><%= job.position %> at <%= job.company %></h3>
            <p><%= job.duration %></p>
            <p><%= job.details %></p>
        <% }) %>
        <h2>Education</h2>
        <% candidate.education.forEach(function(edu) { %>
            <h3><%= edu.degree %></h3>
            <p><%= edu.institution %>, Class of <%= edu.year %></p>
        <% }) %>
        <h2>Skills</h2>
        <ul>
            <% candidate.skills.forEach(function(skill) { %>
                <li><%= skill %></li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
